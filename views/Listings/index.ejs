<% layout("/Layouts/boilerplate") %>
<body>
    <div class="filters mt-3 mb-3">
        <form id="filterForm" action="/filter" method="POST" class="filterForm">
            <label class="filter">
                <input type="radio" name="filter" value="Trending" onchange="this.form.submit()">
                <i class="fa-solid fa-fire"></i>
                <p>Trending</p>
            </label>
            <label class="filter">
                <input type="radio" name="filter" value="Rooms" onchange="this.form.submit()">
                <i class="fa-solid fa-bed"></i>
                <p>Rooms</p>
            </label>
            <label class="filter">
                <input type="radio" name="filter" value="Iconic City" onchange="this.form.submit()">
                <i class="fa-solid fa-mountain-city"></i>
                <p>Iconic City</p>
            </label>
            <label class="filter">
                <input type="radio" name="filter" value="Mountains" onchange="this.form.submit()">
                <i class="fa-solid fa-mountain"></i>
                <p>Mountains</p>
            </label>
            <label class="filter">
                <input type="radio" name="filter" value="Castles" onchange="this.form.submit()">
                <i class="fa-brands fa-fort-awesome"></i>
                <p>Castles</p>
            </label>
            <label class="filter">
                <input type="radio" name="filter" value="Pools" onchange="this.form.submit()">
                <i class="fa-solid fa-person-swimming"></i>
                <p>Pools</p>
            </label>
            <label class="filter">
                <input type="radio" name="filter" value="Camping" onchange="this.form.submit()">
                <i class="fa-solid fa-tents"></i>
                <p>Camping</p>
            </label>
            <label class="filter">
                <input type="radio" name="filter" value="Farms" onchange="this.form.submit()">
                <i class="fa-solid fa-cow"></i>
                <p>Farms</p>
            </label>
            <label class="filter">
                <input type="radio" name="filter" value="Arctic" onchange="this.form.submit()">
                <i class="fa-regular fa-snowflake"></i>
                <p>Arctic</p>
            </label>
            <label class="filter">
                <input type="radio" name="filter" value="Ships" onchange="this.form.submit()">
                <i class="fa-solid fa-ship"></i>
                <p>Ships</p>
            </label>          
        </form>
        <div class="tax-toggle ms-auto">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display with taxes</label>
            </div>
        </div>
    </div>
    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 ">
        <% for(listing of allListings){ %>
            <a class="listing-card" href="/listings/<%= listing.id %>">
            <div class="card listing-card col" filter = "<%= listing.filterOption %>">
                <img src=" <%= listing.image.url %>" class="card-img-top" alt="..." height="250px" >
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <b><p class="card-text title"><%= listing.title  %></p></b>
                  <div class="card-text price">&#8377;<%= listing.price.toLocaleString("en-IN") %>/night <span class="tax-amt"><i>+18% gst</i></span> </div>
                </div>
            </div>
            </a>
        <% } %>
    </div>
    <script>
        let taxSwitch = document.querySelector("#flexSwitchCheckDefault");
        taxSwitch.addEventListener("click",()=>{
            let allTax = document.querySelectorAll(".tax-amt");
            for(tax of allTax){
                if(tax.style.display != "inline") tax.style.display = "inline";
                else tax.style.display = "none";
            }
        });

        let filterOptions = document.querySelectorAll(".filter");
        console.log(filterOptions);
        for(filterOption of filterOptions){
            filterOption.addEventListener("click", (ele) => {
                let filterType;
                if(ele.target.children.length){
                    filterType = ele.target.children[1].innerText;
                }else{
                    filterType = ele.target.parentElement.children[1].innerText;
                }
                displayFilteredItem(filterType);
            });
        }

        const displayFilteredItem = (filterType) => {
            let cards = document.querySelectorAll(".card");
            for(let card of cards){
                if(card.attributes.filter.value != filterType){
                    card.style.display = "none";
                }
            }
        }
    </script>
</body>